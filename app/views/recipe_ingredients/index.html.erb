<p id="notice"><%= notice %></p>

<h1>Recipe Ingredients</h1>

<table>
  <thead>
    <tr>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipe_ingredients.each do |recipe_ingredient| %>
      <tr>
        <td><%= recipe_ingredient.quantity %></td>
        <td><%= link_to 'Show', user_bar_recipe_ingredient(@user, @bar, recipe_ingredient) %></td>
        <td><%= link_to 'Edit', edit_user_bar_recipe_ingredient_path(@user, @bar, recipe_ingredient) %></td>
        <td><%= link_to 'Destroy', user_bar_recipe_ingredient(@user, @bar, recipe_ingredient), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Recipe Ingredient', new_user_bar_recipe_ingredient_path(@user) %>
