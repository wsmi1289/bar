<h1>Bars</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bars.each do |bar| %>
      <tr>
        <td><%= bar.name %></td>
        <td><%= link_to 'Show', user_bar_path(@user, bar) %></td>
        <td><%= link_to 'Edit', edit_user_bar_path(@user, bar) %></td>
        <td><%= link_to 'Destroy', user_bar_path(@user, bar), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bar', new_user_bar_path(@user) %>
